{
	"manifest_version": 2,
	"name": "Anchor Links",
	"version": "0.1.3",
	
	"icons": {
		
	},
	
	"browser_action": {
		"default_icon": {
			
		},
		"default_title": "Anchor Links",
		"default_icon": {
			"16": "images/icon16.png",
			"32": "images/icon32.png",
			"48": "images/icon48.png",
			"64": "images/icon64.png",
			"128": "images/icon128.png",
			"256": "images/icon256.png"
		}
	},
	
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"css": ["anchor.css"],
			"js": ["anchor.js"]
		}
	],
	
	"icons": {
		"16": "images/icon16.png",
		"32": "images/icon32.png",
		"48": "images/icon48.png",
		"64": "images/icon64.png",
		"128": "images/icon128.png",
		"256": "images/icon256.png"
	},
	
	"options_page": "options.html",
	"permissions": ["storage"]
}
